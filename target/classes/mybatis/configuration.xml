<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- VO 객체의 별칭 등록 -->
	<typeAliases>
		<typeAlias alias="sliverUser" type="himedia.slivermate.repository.vo.SliverUser" />
		<typeAlias alias="sliverLesson" type="himedia.slivermate.repository.vo.SliverLesson" />
		<typeAlias alias="sliverPurchase" type="himedia.slivermate.repository.vo.SliverPurchase" />
		<typeAlias alias="sliverReport" type="himedia.slivermate.repository.vo.SliverReport" />
	</typeAliases>
	
	<!-- 타입 핸들러 등록 -->
	<typeHandlers>
	    <typeHandler handler="himedia.slivermate.typehandler.JsonMapTypeHandler" javaType="java.util.Map"/>
	</typeHandlers>

	<!-- Mapper 등록 -->
	<mappers>
		<mapper resource="mybatis/mappers/sliveruser.xml" />
		<mapper resource="mybatis/mappers/sliverlesson.xml" />
		<mapper resource="mybatis/mappers/sliverpurchase.xml" />
		<mapper resource="mybatis/mappers/sliverreport.xml" />
	</mappers>
</configuration>